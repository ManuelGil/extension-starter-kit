# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.ts]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
quote_type = single
spaces_around_brackets = inside
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = true

[*.json]
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
