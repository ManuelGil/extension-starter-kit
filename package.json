{
	"name": "extension-starter-kit",
	"displayName": "MyExtension",
	"description": "My First VS Code Extension",
	"version": "1.0.0",
	"preview": true,
	"icon": "icon.png",
	"galleryBanner": {
		"color": "#eff1f3",
		"theme": "dark"
	},
	"pricing": "Free",
	"license": "MIT",
	"publisher": "imgildev",
	"author": {
		"name": "Manuel Gil",
		"email": "support@imgil.dev",
		"url": "https://imgil.dev/"
	},
	"sponsor": {
		"url": "https://github.com/sponsors/manuelgil"
	},
	"engines": {
		"vscode": "^1.87.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"boilerplate",
		"extension",
		"imgildev",
		"plugin",
		"project",
		"starter-kit",
		"template",
		"typescript",
		"vscode",
		"vsxpert"
	],
	"homepage": "https://github.com/ManuelGil/extension-starter-kit",
	"repository": {
		"type": "git",
		"url": "https://github.com/ManuelGil/extension-starter-kit"
	},
	"bugs": {
		"url": "https://github.com/ManuelGil/extension-starter-kit/issues"
	},
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "MyExtension",
			"properties": {
				"extensionID.files.include": {
					"type": "array",
					"default": [
						"ts",
						"js",
						"json",
						"html",
						"css",
						"scss",
						"less"
					],
					"scope": "resource",
					"description": "Glob patterns to include in the package. The default is ts, js, json, html, css, scss, less."
				},
				"extensionID.files.exclude": {
					"type": "array",
					"default": [
						"**/node_modules/**",
						"**/dist/**",
						"**/out/**",
						"**/build/**",
						"**/.*/**"
					],
					"scope": "resource",
					"description": "Glob patterns to exclude from the package. The default is node_modules, dist, out, build, and any hidden files."
				},
				"extensionID.files.showPath": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "Show the path of the file in the name of the list of generated files"
				},
				"extensionID.openai.apiKey": {
					"type": "string",
					"default": "",
					"scope": "resource",
					"description": "OpenAI API Key. Get it from https://platform.openai.com/account/api-keys"
				},
				"extensionID.openai.model": {
					"type": "string",
					"default": "gpt-3.5-turbo",
					"enum": [
						"babbage-002",
						"dall-e-2",
						"dall-e-3",
						"davinci-002",
						"gpt-3.5-turbo",
						"gpt-3.5-turbo-0301",
						"gpt-3.5-turbo-1106",
						"gpt-3.5-turbo-16k",
						"gpt-3.5-turbo-instruct",
						"gpt-4",
						"gpt-4-32k",
						"gpt-4-turbo-preview",
						"gpt-4-vision-preview",
						"text-embedding-3-large",
						"text-embedding-3-small",
						"text-embedding-ada-002",
						"text-moderation-latest",
						"text-moderation-stable",
						"tts-1",
						"tts-1-hd",
						"whisper-1"
					],
					"scope": "resource",
					"description": "OpenAI Model. The default is gpt-3.5-turbo. Get more information from https://platform.openai.com/docs/models/model-endpoint-compatibility"
				}
			}
		},
		"commands": [
			{
				"command": "extensionID.helloWorld",
				"title": "Hello World",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.getFilesInFolder",
				"title": "Get Files in Folder",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.convertToTS",
				"title": "Convert JSON to TypeScript",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.feedback.aboutUs",
				"title": "About Us",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.feedback.documentation",
				"title": "Documentation",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.feedback.reportIssues",
				"title": "Report Issues",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.feedback.rateUs",
				"title": "Rate Us",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.feedback.followUs",
				"title": "Follow Us",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.feedback.supportUs",
				"title": "Support Us",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.listFiles.refreshList",
				"title": "Refresh List",
				"category": "MyExtension",
				"icon": "$(refresh)"
			},
			{
				"command": "extensionID.listFiles.openFile",
				"title": "Open File",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.colors.addColor",
				"title": "Add Color",
				"category": "MyExtension"
			},
			{
				"command": "extensionID.colors.clearColors",
				"title": "Clear Colors",
				"icon": "$(clear-all)",
				"category": "MyExtension"
			}
		],
		"keybindings": [
			{
				"command": "extensionID.convertToTS",
				"key": "ctrl+alt+t",
				"mac": "cmd+alt+t",
				"when": "editorTextFocus && editorHasSelection"
			}
		],
		"submenus": [
			{
				"id": "extensionID.explorer.submenu",
				"label": "MyExtension"
			},
			{
				"id": "extensionID.editor.submenu",
				"label": "MyExtension"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "extensionID.listFiles.refreshList",
					"when": "view == extensionID.listFilesView",
					"group": "navigation"
				},
				{
					"command": "extensionID.colors.clearColors",
					"when": "view == extensionID.colorView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "extensionID.listFiles.openFile",
					"when": "view == extensionID.listFilesView && viewItem == file"
				}
			],
			"explorer/context": [
				{
					"submenu": "extensionID.explorer.submenu",
					"group": "2_workspace",
					"when": "explorerViewletFocus && explorerResourceIsFolder && !explorerResourceIsRoot"
				}
			],
			"editor/context": [
				{
					"submenu": "extensionID.editor.submenu",
					"group": "1_modification",
					"when": "editorHasSelection"
				}
			],
			"extensionID.explorer.submenu": [
				{
					"command": "extensionID.getFilesInFolder",
					"alt": "Get Files in Folder",
					"group": "extension-starter-kit@1"
				}
			],
			"extensionID.editor.submenu": [
				{
					"command": "extensionID.convertToTS",
					"alt": "Convert JSON to TypeScript",
					"group": "extension-starter-kit@2"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "extensionID.listFilesView",
				"contents": "To effectively capture files, ensure you include the file type within the workspace settings.\n[Open Workspace Setting](command:workbench.action.openWorkspaceSettingsFile)\nTo learn more about how to use the Starter Kit [read our docs](https://github.com/ManuelGil/extension-starter-kit)."
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "chat-view",
					"title": "Chat View",
					"icon": "./assets/logo.svg"
				},
				{
					"id": "secondary-view",
					"title": "Secondary View",
					"icon": "./assets/logo.svg"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "extensionID.listFilesView",
					"name": "List of Files",
					"visibility": "collapsed"
				}
			],
			"chat-view": [
				{
					"id": "extensionID.chatView",
					"name": "Chat View",
					"type": "webview"
				}
			],
			"secondary-view": [
				{
					"id": "extensionID.colorView",
					"name": "Color View",
					"type": "webview"
				},
				{
					"id": "extensionID.feedbackView",
					"name": "Help and Feedback",
					"visibility": "visible"
				}
			]
		},
		"jsonValidation": [
			{
				"fileMatch": ".vscode/settings.json",
				"url": "./schemas/config.schema.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "rimraf out && tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"format": "prettier --write 'src/**/*.ts'",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"test": "node ./out/test/runTest.js",
		"compodoc": "npx compodoc -p tsconfig.doc.json -d compodoc --theme readthedocs -s",
		"prepare": "husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@compodoc/compodoc": "^1.1.23",
		"@types/glob": "^8.1.0",
		"@types/minimatch": "^3.0.5",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.30",
		"@types/vscode": "^1.87.0",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"eslint": "^8.57.0",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-promise": "^6.1.1",
		"glob": "^10.3.10",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"mocha": "^10.4.0",
		"prettier": "3.2.5",
		"rimraf": "^5.0.5",
		"typescript": "^5.4.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"@vscode/codicons": "^0.0.35",
		"json-to-ts": "^1.7.0",
		"openai": "^4.29.2"
	}
}
